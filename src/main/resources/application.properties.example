spring.application.name=tulipshop
server.port=8787

# recommended: use context-path instead of custom base-url
#server.servlet.context-path=/v1/api

api.base-url=http://localhost:8787/v1/api

# Thymeleaf configuration (default - không cần cấu hình vì Spring Boot tự động)
# spring.thymeleaf.prefix=classpath:/templates/
# spring.thymeleaf.suffix=.html

spring.datasource.url=jdbc:mysql://localhost:3306/tulipshop
spring.datasource.username=root
spring.datasource.password=YOUR_DATABASE_PASSWORD
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# SQL Script Execution
# Spring Boot will automatically run schema.sql on startup
spring.sql.init.mode=always
spring.sql.init.continue-on-error=true

spring.jpa.show-sql=true
spring.jpa.hibernate.ddl-auto=update
spring.jpa.properties.hibernate.format_sql=true
# ko cần cấu hình, Spring Boot tự động nhận diện
#spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQLDialect
#spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

storage.location=src/main/resources/static/images/upload
# Static resources are served from classpath:/static/ by default
# spring.web.resources.static-locations=classpath:/static/

# Remember-Me Configuration
# Change this to a secure random string in production
security.remember-me.key=tulip-shop-remember-me-secret-key-2024

spring.security.oauth2.client.registration.google.client-id=
spring.security.oauth2.client.registration.google.client-secret=

spring.mail.host=smtp.gmail.com
spring.mail.port=587
spring.mail.username=YOUR_EMAIL@gmail.com
spring.mail.password=YOUR_EMAIL_APP_PASSWORD
spring.mail.properties.mail.smtp.auth=true
spring.mail.properties.mail.smtp.starttls.enable=true


logging.level.org.springframework.security=DEBUG
logging.level.org.springframework.web=DEBUG
logging.level.com.opensymphony.sitemesh=DEBUG
logging.level.org.springframework.mail=DEBUG

